body {
    background: linear-gradient(118.04deg, rgba(3, 72, 136, 0.97) 9.46%, #5396D3 50.83%, #5497D4 50.84%, rgba(4, 76, 142, 0.78) 91.36%), #C4C4C4;
    font-family: 'Roboto';
}

.central {
    position: relative;
    margin: 0px auto;
    width: auto;
    width: 50%;
    color: white;
    text-shadow: 0px 4px 10px rgba(0, 0, 0, 0.25);
}

#header-login {
    font-style: normal;
    font-weight: normal;
    font-size: 40px;
    line-height: 84px;
    display: inline-block;
    align-items: center;
    text-indent: 33px;
    margin: 0px auto;

    text-shadow: 0px 4px 10px rgba(0, 0, 0, 0.25);
}
.login-form {
    width: 40%;
    position: relative;
    margin: 0px auto;
}
.login-form input {
    width: 100%;
    height: 30px;
    margin: 20px auto;
    background: #FFFFFF;
    border-radius: 5px;
    display: block;
}
#keep_in {
    display: block;
    margin-top: 50px;
    text-align: left;
    align-content: left;
    vertical-align: center;
}
.login-form input[type=checkbox] {
    width: 20px;
    margin: auto 0px;
    display: inline;
}
.login-form input[type=button] {
    width: 170px;
    height: 40px;

    background: #094C8A;
    border-radius: 10px;
    border: 0px;
    color: white;
    font-size: 15pt;
}
.login-form hr {
    position: absolute;
    width: 100%;
    border: 1px solid #9CA9C9;
    display: block;
    margin-bottom: 50px;
}
