<fest:template xmlns:fest="http://fest.mail.ru">
	<fest:set name="form__row">
		<div class="form__row">
			<div class="form__row__label">
				<label for="{params.id}"><fest:value>params.label</fest:value></label>
			</div>
			<div class="form__row__widget">
				<input id="{params.id}" class="form__field" name="{params.name}" value="{params.value}" placeholder="{params.placeholder}" type="{params.type}" required=""/>
				<div class="form__message"/>
			</div>
		</div>
	</fest:set>
</fest:template>
