<fest:template xmlns:fest="http://fest.mail.ru">
	<fest:set name="form__block">
		<div class="form__block">
			<div class="form__block__label" for="{params.id}"><fest:value>params.label</fest:value></div>
			<input id="{params.id}" class="form__field" name="{params.name}" type="{params.type}" placeholder="{params.placeholder}" required=""/>
			<div class="form__message"/>
		</div>
	</fest:set>
</fest:template>
