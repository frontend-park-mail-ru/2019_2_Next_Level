<fest:template xmlns:fest="http://fest.mail.ru">
	<fest:include src="../../Form/FormBlock/FormBlock.tmpl.xml"/>
	<fest:include src="../../Form/FormButton/FormButton.tmpl.xml"/>
	<form class="form">
		<div class="form__title">Welcome back!</div>
		<fest:get name="form__block">{label: 'Login' , id: 'login', name: 'login', type: 'text', placeholder: '@nlmail '}</fest:get>
		<fest:get name="form__block">{label: 'Password' , id: 'password', name: 'password', placeholder: '', type: 'password'}</fest:get>
		<fest:get name="form__button">{type: 'submit', value: 'Sign in!'}</fest:get>
	</form>
	<div class="footer">Have not registered yet?<br/><a>Join us!</a></div>
</fest:template>
