<fest:template xmlns:fest="http://fest.mail.ru">
	<fest:include src="../../Form/FormBlock/FormBlock.tmpl.xml"/>
	<fest:include src="../../Form/FormButton/FormButton.tmpl.xml"/>
	<form class="form">
		<div class="form__title">Join us!</div>
		<div class="flex">
			<fest:get name="form__block">{label: 'First name' , id: 'firstName', name: 'firstName', type: 'text'}</fest:get>
			<fest:get name="form__block">{label: 'Second name' , id: 'secondName', name: 'secondName', type: 'text'}</fest:get>
		</div>
		<fest:get name="form__block">{label: 'Date of Birth' , id: 'birthDate', name: 'birthDate', type: 'text', placeholder: 'mm.dd.yyyy'}</fest:get>
		<div class="form__block">
			<div class="form__label">Sex</div>
			<div class="flex">
				<label>
					<input type="radio" name="sex" value="male" required=""/>
					male
				</label>
				<label>
					<input type="radio" name="sex" value="female" required=""/>
					female
				</label>
			</div>
			<div class="form__message"/>
		</div>
		<fest:get name="form__block">{label: 'Login' , id: 'login', name: 'login', type: 'text', placeholder: '@nlmail '}</fest:get>
		<fest:get name="form__block">{label: 'Password' , id: 'password', name: 'password', type: 'password'}</fest:get>
		<fest:get name="form__button">{type: 'submit', value: 'Sign up!'}</fest:get>
	</form>
	<div class="footer">Have not registered yet?<br/><a>Join us!</a></div>
</fest:template>
