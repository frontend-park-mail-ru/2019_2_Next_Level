<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div class="form_block">
        <fest:choose>
            <fest:when test="json.button!=undefined">
                <div style="visibility: hidden;">Null</div>
                <fest:include context="json.button" src="../Button/Button.tmpl.xml"/>
            </fest:when>
            <fest:otherwise>
                <div><fest:value output="text">json.title</fest:value></div>
                <input type="{json.type}"  name="{json.name}" value="{json.value}"/>
                <div class="error" style="visibility: hidden;"><fest:value output="text">json.error</fest:value></div>
            </fest:otherwise>
        </fest:choose>
        
        <!-- <fest:include context="{type:'submit', value:'Change', id:'change-avatar'}" src="../Button/Button.tmpl.xml"/> -->
        <!-- <div class="error" style="visibility: hidden;"><fest:value output="text">json.error</fest:value></div> -->
    </div>
</fest:template>