<fest:template xmlns:fest="http://fest.mail.ru" context_name="args">
	<div class="datalist-item datalist-item_id-{args.name} datalist-item_{modifier}">
		<div class="datalist-item__checkbox-wrap">
			<fest:if test="args.isSystem===false">
				<input class="datalist-item__checkbox-settings datalist-item__checkbox_id-{args.name}"
							type="checkbox"/>
			</fest:if>
		</div>
		<a class="datalist-item__message-wrap" href="/messages/{args.name}">
			<div class="datalist-item__subject-wrap">
				<span class="datalist-item__subject-settings"><fest:value>args.name</fest:value></span>
			</div>
			<div class="datalist-item__date-wrap">
				<div class="datalist-item__date"><fest:value>args.capacity</fest:value></div>
			</div>
		</a>
	</div>
</fest:template>
