<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
	<header>
		<div class="layout">
			<div class="left">
				<a class="logo-wrap" href="#">
					<img class="logo" src="./images/logo/nlmail.svg" alt="logo"/>
				</a>
				<fest:if test="json.authorized === true">
					<div class="search-wrap">
						<input class="search" type="text" placeholder="Search"/>
					</div>
				</fest:if>
			</div>
			<fest:if test="json.authorized === true">
				<div class="right">
					<a class="profile-wrap" href="#">
						<div class="profile_name"><fest:value>json.nickName</fest:value></div>
						<fest:choose>
							<fest:when test="json.avatar === null">
								<img class="avatar" src="images/icons/noavatar.svg" alt="avatar"/>
							</fest:when>
							<fest:otherwise>
								<img class="avatar" src="{json.avatar}" alt="avatar"/>
							</fest:otherwise>
						</fest:choose>
						<img class="arrow" src="images/icons/arrow.svg" alt="arrow"/>
						<div class="profile__menu"/>
					</a>
				</div>
			</fest:if>
		</div>

	</header>
</fest:template>
