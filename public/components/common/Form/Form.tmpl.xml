<fest:template xmlns:fest="http://fest.mail.ru">
	<fest:include src="../FormBlock/FormBlock.tmpl.xml"></fest:include>
	<fest:include src="../Button/Button.tmpl.xml"></fest:include>
	<fest:set name="form">
		<form action="/api/auth/{params.type}" method="POST" id="{params.type}-form">
			<fest:if test="params.type === 'signup'">
				<fest:get name="form__block">{legend: 'Name', type: 'text', name: 'name', error: 'Wrong name!'}</fest:get>
			</fest:if>
			<fest:get name="form__block">{legend: 'Email', type: 'email', name: 'email', placeholder: '@nlmail.ru', error: 'Wrong email!'}</fest:get>
			<fest:get name="form__block">{legend: 'Password', type: 'password', name: 'password', error: 'Wrong password!'}</fest:get>
			<fest:choose>
				<fest:when test="params.type === 'signup'">
					<fest:get name="button">{value: 'Join!', id: 'signup-btn'}</fest:get>
				</fest:when>
				<fest:otherwise>
					<fest:get name="button">{value: 'Sign in!', id: 'signin-btn'}</fest:get>
				</fest:otherwise>
			</fest:choose>
		</form>
	</fest:set>
</fest:template>
